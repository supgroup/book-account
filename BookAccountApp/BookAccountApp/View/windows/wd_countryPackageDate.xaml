                        <Button DockPanel.Dock="Right" x:Name="btn_clear" Click="Btn_clear_Click" Padding="0" Background="{x:Null}" BorderBrush="{x:Null}" Margin="5,1" >
                            <materialDesign:PackIcon Foreground="#178DD2" Kind="RefreshCircle"   Width="20" Height="20">
                                <materialDesign:PackIcon.ToolTip>
                                    <ToolTip x:Name="tt_clear" Placement="left" HorizontalOffset="5" 
                                             PlacementRectangle="50,0,0,0" VerticalOffset="20"/>
                                </materialDesign:PackIcon.ToolTip>
                            </materialDesign:PackIcon>
                        </Button>
                        <Separator Background="#999999" VerticalAlignment="Center" Width="auto" />
                    </DockPanel>
                    <Border Grid.Row="1"  CornerRadius="10" Margin="5"   BorderThickness="1" BorderBrush="{StaticResource MainColor}">
                        <Grid >
                            <ComboBox   x:Name="cb_country"            Padding="10,5,5,5" 
                                        TextBlock.Foreground="#4E4E4E" Margin="4,0"
                                        SelectedValue="{Binding countryId, Mode=OneWay}"
                                        Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                                        materialDesign:HintAssist.Hint="Country..."    
                                        VerticalAlignment="Center"     BorderThickness="0"      Height="40"
                                        LostFocus="validateEmpty_LostFocus" SelectionChanged="Cb_country_SelectionChanged"/>
                            <Path Fill="#E81123"   Stretch="Fill" Margin="5,5,20,5" x:Name="p_error_country"
                                      HorizontalAlignment="Right"     Visibility="Collapsed"   
                                      VerticalAlignment="Center"      Width="15"  Height="15"
                                      Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2 Z M12,13 C11.45,13 11,12.55 11,12 L11,8 C11,7.45 11.45,7 12,7 C12.55,7 13,7.45 13,8 L13,12 C13,12.55 12.55,13 12,13 Z M13,17 L11,17 L11,15 L13,15 L13,17 Z">
                            </Path>
                        </Grid>
                    </Border>
                  
                    <!--SelectedValue="{Binding monthCount, Mode=OneWay}"-->
                    <Border Grid.Row="2"  CornerRadius="10" Margin="5"   BorderThickness="1" BorderBrush="{StaticResource MainColor}">
                        <Grid >
                            <ComboBox   x:Name="cb_month"            Padding="10,5,5,5" 
                                        TextBlock.Foreground="#4E4E4E" Margin="4,0"
                                        Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                                        materialDesign:HintAssist.Hint="Period..."    
                                        VerticalAlignment="Center"     BorderThickness="0"      Height="40"
                                        LostFocus="validateEmpty_LostFocus"/>
                            <Path Fill="#E81123"   Stretch="Fill" Margin="5,5,20,5" x:Name="p_error_month"
                                      HorizontalAlignment="Right"     Visibility="Collapsed"   
                                      VerticalAlignment="Center"      Width="15"  Height="15"
                                      Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2 Z M12,13 C11.45,13 11,12.55 11,12 L11,8 C11,7.45 11.45,7 12,7 C12.55,7 13,7.45 13,8 L13,12 C13,12.55 12.55,13 12,13 Z M13,17 L11,17 L11,15 L13,15 L13,17 Z">
                            </Path>
                        </Grid>
                    </Border>
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                        <Border   CornerRadius="10" Margin="5"   BorderThickness="1" BorderBrush="{StaticResource MainColor}">
                            <Grid>
                            <TextBox x:Name="tb_price" Grid.Column="0" Text="{Binding price, Mode=OneWay}" Padding="10,5,0,0" 
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}" IsReadOnly="False"
                                 materialDesign:HintAssist.Hint="Price..."  
                                 Foreground="#4E4E4E"  FontWeight="SemiBold" KeyboardNavigation.IsTabStop="False"
                                 MaxLength="50" BorderThickness="0" 
                                 materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
                                 Height="40"   Margin="4,0"
                                 PreviewTextInput="Number_PreviewTextInput" PreviewKeyDown="Spaces_PreviewKeyDown"
                                 LostFocus="validateEmpty_LostFocus" TextChanged="ValidateEmpty_TextChange"/>
                        <Path Grid.Column="0" Fill="#E81123"   Stretch="Fill" Margin="5,5,15,5" x:Name="p_error_price"
                              HorizontalAlignment="Right" Visibility="Collapsed"   
                              VerticalAlignment="Center" Width="15"  Height="15"
                              Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2 Z M12,13 C11.45,13 11,12.55 11,12 L11,8 C11,7.45 11.45,7 12,7 C12.55,7 13,7.45 13,8 L13,12 C13,12.55 12.55,13 12,13 Z M13,17 L11,17 L11,15 L13,15 L13,17 Z">
                            </Path>
                            </Grid>
                        </Border>

                        <TextBlock x:Name="txt_currency" Grid.Column="1" Text="" Foreground="#737373" FontSize="10" VerticalAlignment="Center" Margin="5,5,5,5"/>
                        </Grid>
                    <Border Grid.Row="4" CornerRadius="10" Margin="5"   BorderThickness="1" BorderBrush="{StaticResource MainColor}">
                        <Grid   >
                            <TextBox  x:Name="tb_notes" Text="{Binding notes, Mode=OneWay}"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                  Padding="10,0,5,0"  
                                 materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
                                  materialDesign:HintAssist.Hint="Note..."  
                                  Foreground="#4E4E4E"
                                 Margin="4,0"  BorderThickness="0"
                            Grid.Column="1"  Height="70" TextWrapping="Wrap"/>
                        </Grid>
                    </Border>
                    <Grid   Grid.Row="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" x:Name="btn_save" 
                            materialDesign:ButtonAssist.CornerRadius="10" Background="{StaticResource SecondColor}" BorderBrush="{x:Null}"  
                            Margin="0,5,0,5"    Content="add" Click="Btn_save_Click" />
                        <Button Grid.Column="1" x:Name="btn_update" 
                            materialDesign:ButtonAssist.CornerRadius="10" Background="{StaticResource SecondColor}" BorderBrush="{x:Null}"  
                            Margin="0,5,0,5"    Content="update" Click="Btn_update_Click"  />
                        <Button Grid.Column="2" x:Name="btn_delete" 
                            materialDesign:ButtonAssist.CornerRadius="10" Background="{StaticResource SecondColor}" BorderBrush="{x:Null}"  
                            Margin="0,5,0,5"    Content="delete" Click="Btn_delete_Click"  />
                    </Grid>
                </Grid>
                
            </Border>
        </Grid>

       
    </Grid>
</Window>
